// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Usuario del sistema
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  password      String
  firstName     String
  lastName      String
  name          String?   // Deprecado - mantener por compatibilidad
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Clave de encriptación del usuario (encriptada con clave maestra)
  encryptionKey String

  // Configuración de reportes de salud
  healthReportPeriodMonths Int @default(6) // 1, 3, 6, 12, 24

  // Relaciones
  accounts      Account[]
  sessions      Session[]
  medicalExams  MedicalExam[]
  appointments  Appointment[]
  documents     Document[]
  healthReports HealthReport[]
}

// Para NextAuth
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Token de verificación de email
model EmailVerificationToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())

  @@index([email])
  @@index([token])
}

// Exámenes médicos
model MedicalExam {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Datos básicos
  examType     String   // Tipo de examen: "Sangre", "Orina", "Imagenología", etc.
  institution  String   // Institución que emitió el examen
  examDate     DateTime // Fecha del examen

  // Datos encriptados (JSON con resultados del examen)
  encryptedData String  @db.Text
  encryptionIv  String  // Initialization vector para AES

  // Referencia al documento PDF
  documentId   String?
  document     Document? @relation(fields: [documentId], references: [id])

  // Metadata
  processingStatus String @default("pending") // pending, processing, completed, failed
  aiProcessed      Boolean @default(false)

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([userId])
  @@index([examDate])
}

// Citas médicas
model Appointment {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Datos básicos
  doctorName      String
  specialty       String
  appointmentDate DateTime
  location        String?

  // Notas encriptadas
  encryptedNotes  String?  @db.Text
  encryptionIv    String?

  // Email original (AI-assisted)
  encryptedEmailData String? @db.Text
  emailEncryptionIv  String?

  // Source tracking
  sourceType      String   @default("manual") // "manual" | "ai_assisted"

  // Estado
  status          String   @default("scheduled") // scheduled, completed, cancelled

  // Reminder tracking
  reminder1Sent   Boolean  @default(false)  // 3 días antes
  reminder1SentAt DateTime?
  reminder2Sent   Boolean  @default(false)  // 1 día antes
  reminder2SentAt DateTime?
  sendReminders   Boolean  @default(true)   // Permitir recordatorios

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId])
  @@index([appointmentDate])
  @@index([status])
  @@index([reminder1Sent, reminder2Sent])
}

// Documentos (PDFs y otros archivos)
model Document {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Datos del archivo
  fileName      String
  fileType      String   // "application/pdf", etc.
  fileSize      Int

  // Ruta del archivo encriptado
  filePath      String
  encryptionIv  String
  fileHash      String   // SHA-256 del archivo original

  // Metadata
  uploadedAt    DateTime @default(now())

  // Relaciones
  medicalExams  MedicalExam[]

  @@index([userId])
}

// Reportes de Salud con Consejos de IA
model HealthReport {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Período analizado
  periodMonths Int // Cuántos meses se analizaron
  periodStart  DateTime
  periodEnd    DateTime

  // Datos del reporte encriptados (JSON con consejos, análisis, tendencias)
  encryptedData String @db.Text
  encryptionIv  String

  // Metadata
  triggeredBy  String? // ID del examen que disparó este reporte (si fue automático)
  generatedAt  DateTime @default(now())
  emailSent    Boolean @default(false)
  emailSentAt  DateTime?

  // Soft delete
  deletedAt    DateTime? // NULL = activo, NOT NULL = eliminado

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([generatedAt])
  @@index([deletedAt])
}
