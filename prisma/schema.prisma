// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Usuario del sistema
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  password      String
  name          String?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Clave de encriptación del usuario (encriptada con clave maestra)
  encryptionKey String

  // Relaciones
  accounts      Account[]
  sessions      Session[]
  medicalExams  MedicalExam[]
  appointments  Appointment[]
  documents     Document[]
}

// Para NextAuth
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Token de verificación de email
model EmailVerificationToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())

  @@index([email])
  @@index([token])
}

// Exámenes médicos
model MedicalExam {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Datos básicos
  examType     String   // Tipo de examen: "Sangre", "Orina", "Imagenología", etc.
  institution  String   // Institución que emitió el examen
  examDate     DateTime // Fecha del examen

  // Datos encriptados (JSON con resultados del examen)
  encryptedData String  @db.Text
  encryptionIv  String  // Initialization vector para AES

  // Referencia al documento PDF
  documentId   String?
  document     Document? @relation(fields: [documentId], references: [id])

  // Metadata
  processingStatus String @default("pending") // pending, processing, completed, failed
  aiProcessed      Boolean @default(false)

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([userId])
  @@index([examDate])
}

// Citas médicas
model Appointment {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Datos básicos
  doctorName      String
  specialty       String
  appointmentDate DateTime
  location        String?

  // Notas encriptadas
  encryptedNotes  String?  @db.Text
  encryptionIv    String?

  // Estado
  status          String   @default("scheduled") // scheduled, completed, cancelled

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId])
  @@index([appointmentDate])
}

// Documentos (PDFs y otros archivos)
model Document {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Datos del archivo
  fileName      String
  fileType      String   // "application/pdf", etc.
  fileSize      Int

  // Ruta del archivo encriptado
  filePath      String
  encryptionIv  String
  fileHash      String   // SHA-256 del archivo original

  // Metadata
  uploadedAt    DateTime @default(now())

  // Relaciones
  medicalExams  MedicalExam[]

  @@index([userId])
}
